#include "fsm_simple_buttons.h"
#include "global.h"
#include "button_reading.h"
#include "led_display.h"
#include "timer.h"

enum State {INIT, RESET_0, DEC, INC, INC_1S , DEC_1S};
enum State  currentState = INIT ;
enum State  nextState = INIT;

void fsm_simple_buttons_run(){
	currentState = nextState;
	switch(currentState){
		case INIT:
		count_down();
	    if(button_flag[0]== 1){
	    	button_flag[0] = 0;
	    	counter = 0;
	    	display7SEG(counter);
	    }
	    if(button_flag_pressed_3s[1] == 1){
	    	currentState = INC_1S;
	    	setTimer1(1000);
	    }
	    if(button_flag[1] == 1 ){
	    	button_flag[1] = 0;
	    	nextState = INC;
	    }
	    if(button_flag[2] == 1 ){
	    	counter--;
	    	display7SEG(counter);
//	    	nextState = DEC;
	    }
		case RESET_0:
			if(button_flag[0]== 0){
				nextState = INIT;
			}
		case INC:
	    	counter++;
	    	if(counter > 9){
	    		counter = 0;
	    	}
	    	display7SEG(counter);
	    	if (button_flag[1] == 0){
	    		nextState = INIT;
	    	}
			break;
		case DEC:
			counter--;
	    	if(counter < 0){
	    		counter = 9;
	    	}
	    	display7SEG(counter);
		case DEC_1S:
			if(timer1_flag==1){
				setTimer1(1000);
				counter++;
				if(counter > 9) {
					counter=0;
				}
				display7SEG(counter);
			}
			if(t)
			break;
		default:
			break;
	}
}

